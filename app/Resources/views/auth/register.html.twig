{% extends 'base.html.twig' %}



{% block body %}
{% if app.user != null %} 
    {% block menu_top %}
        {% include 'menu.html.twig' %}
    {% endblock %}
 {% endif %}
    <div class="container">
    <br>
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-default">
                    <div class="panel-heading">{% if app.user == null %} Inscription {% else %} Ajouter utilisateur {% endif %}</div>
                    <div class="panel-body">
                        {{ form_start(form) }}
                        <div class="form_group">
                            <div class="col-md-8 col-md-offset-2">
                                <label for="Civilite" >Civilité</label>
                                {{ form_widget(form.Civilite, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form_group">
                            <div class="col-md-8 col-md-offset-2">
                                <label for="Nom" >Nom</label>
                                {{ form_widget(form.Nom, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form_group">
                            <div class="col-md-8 col-md-offset-2">
                                <label for="Prénom" >Prénom</label>
                                {{ form_widget(form.Prenom, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form_group">
                            <div class="col-md-8 col-md-offset-2">
                                <label for="Email" >Email</label>
                                {{ form_widget(form.Email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form_group">
                            <div class="col-md-8 col-md-offset-2">
                                <label for="Tél" >Tél</label>
                                {{ form_widget(form.Tel, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form_group">
                            <div class="col-md-8 col-md-offset-2">
                                <label for="Adresse" >Adresse</label>
                                {{ form_widget(form.Adresse, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-8 col-md-offset-2">
                                <label for="DateNaissance" >Date de naissance</label>
                                    <div id="datepickerDateNaissance" class="input-group date" data-date-format="yyyy-mm-dd">
                                        {{ form_widget(form.DateNaissance, {'attr': {'class': 'form-control'}}) }}
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                    </div>
                            </div>
                        </div>
                     


                        <div class="form_group">
                            <div class="col-md-8 col-md-offset-2">
                                <label for="Role" >Role</label>
                                {{ form_widget(form.Role, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form_group">
                            <div class="col-md-8 col-md-offset-2">
                                <label for="Departement" >Departement</label>
                                {{ form_widget(form.Departement, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form_group">
                            <div class="col-md-8 col-md-offset-2">
                                <label for="Mot_de_passe" >Mot de passe</label>
                                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form_group">
                            <div class="col-md-8 col-md-offset-2">
                                <label for="Confirmation_mot_de_passe" >Confirmation de mot de passe</label>
                                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        

                        
                        <div class="form-group">
                            <div class="col-md-8 col-md-offset-9" style="float:left;margin-top:10px;">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-btn fa-user"></i> Enregistrer
                                    </button>
                                <button type="button" class="btn btn-secondary" onclick="javascript:history.go(-1)">
                                    <i class="fa fa-btn fa-user"></i> Annuler
                                    </button>
                            </div>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $(function () {
            $("#datepickerDateNaissance").datepicker({autoclose: true,todayHighlight: true}).datepicker('update', new Date());
        });
    </script>
{% endblock %}